# Application
NODE_ENV=development
APP_HOST=localhost
APP_PORT=3000

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_discounts,read_customers
SHOPIFY_APP_URL=http://localhost:3000
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/loyalty_quests_dev

# Redis/BullMQ
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
BULLMQ_MAX_RETRIES=3
BULLMQ_BACKOFF_DELAY=5000

# Security
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
SESSION_SECRET=your_session_secret_minimum_32_characters

# Features
ENABLE_WEBHOOK_AUTOMATION=true
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=debug
