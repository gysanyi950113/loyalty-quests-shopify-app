# Application
NODE_ENV=development
APP_URL=http://localhost:3000
HOST=localhost
PORT=3000

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_customers,write_customers,read_discounts,write_discounts

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/loyalty_quests_dev

# Redis
REDIS_URL=redis://localhost:6379

# BullMQ
BULLMQ_REDIS_HOST=localhost
BULLMQ_REDIS_PORT=6379

# Security
SESSION_SECRET=your_session_secret_minimum_32_characters_long_please_change_this_value

# Billing
BILLING_CALLBACK_URL=http://localhost:3000/api/billing/callback

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_QUEST_ENGINE=true
ENABLE_REWARD_SYSTEM=true
ENABLE_WEBHOOK_AUTOMATION=true

# Logging
LOG_LEVEL=info

# Development
DEBUG=false
