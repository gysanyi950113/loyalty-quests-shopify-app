# Shopify App Credentials
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_SCOPES=read_products,write_products,read_orders,write_orders,read_customers,write_customers,read_discounts,write_discounts

# App Configuration
APP_URL=https://your-app-url.com
HOST=localhost
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/loyalty_quests?schema=public

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Session Secret (Generate a random string)
SESSION_SECRET=your_random_session_secret_here

# Shopify Billing
BILLING_CALLBACK_URL=https://your-app-url.com/api/billing/callback

# BullMQ Configuration
BULLMQ_REDIS_HOST=localhost
BULLMQ_REDIS_PORT=6379

# Logging
LOG_LEVEL=info

# Analytics
ENABLE_ANALYTICS=true

# Feature Flags
ENABLE_QUEST_ENGINE=true
ENABLE_REWARD_SYSTEM=true
ENABLE_ANALYTICS=true
ENABLE_WEBHOOK_AUTOMATION=true

# Development
DEBUG=false
